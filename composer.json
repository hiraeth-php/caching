{
    "name": "hiraeth/caching",
    "description": "Caching abstraction for the Hiraeth Nano Framework",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "MIT",
    "authors": [
        {
            "name":  "Matthew J. Sahagian",
            "email": "matthew.sahagian@gmail.com",
            "role":  "Lead Architect / Developer"
        }
    ],
    "autoload": {
        "classmap": ["src/"]
    },
    "require": {
        "hiraeth/app": "^3.0",
        "psr/cache": "^3.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.0",
	"phpunit/phpunit": "^8.5",
        "symfony/console": "^6.0"
    },
    "type": "opus-package",
    "extra": {
        "opus": {
            "hiraeth/app": {
                "config": ""
            }
        }
    },
    "config": {
        "allow-plugins": {
            "ocramius/package-versions": true,
            "imarc/opus": true
        }
    }
}
